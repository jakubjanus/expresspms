extends layout

block content

	#wrapper
		#display
			include navi

			script(type='text/javascript', src='/javascripts/issue.js')	

			<input id="id" type="hidden" value="#{issue.id}"/>

			div.container.well

				h4#title #{issue.title}
				span#status.label.label-success #{issue.status.name}

				div.small-info
					span created by #{issue.author_id.login} |				
					span assigned to #{issue.assigned_id.login}

				hr.separator

				p#content #{issue.content}

				hr.separator

				div#comments

				div#newComment
					a#addComment.btn.btn-primary add comment

		include footer