extends layout

block content

	#wrapper
		#display
			include navi

			div.container

				h3 List of issues (#{listissues.length})

				- each issue, i in listissues			
							div.col-lg-3
								div.thumbnail
									div.caption
										div.issu-title-in-thumb
											h5 <a href='/issue/#{issue._id}'> #{issue.title} </a> 
										span#status.label.label-success #{issue.status.name}
										div.small-info
											span created by #{issue.author_id.login} |				
											span assigned to #{issue.assigned_id.login}
										hr.separator										
										p											
											<a href='/issue/#{issue._id}' class='btn btn-default'> view </a> 

		include footer


