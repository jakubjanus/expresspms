extends layout

block content
    #wrapper
        #display
            include navi

            div.container.well
            
                h3 Sign in

                form(method='post')

                 div.input-group                      
                    input(type='text', name='login', size='50', class='form-control', placeholder='login')
                 div.input-group                      
                    input(type='password', name='password', size='50', class='form-control', placeholder='password')
                 
                 div
                    input(type='submit', value='Sign in', class='btn btn-primary')

        include footer