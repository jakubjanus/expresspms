#navi
	script(type='text/javascript', src='/javascripts/navi.js')	
	div.navbar.navbar-fixed-top
		ul.nav.navbar-nav
			li <a href='/' data-toggle="nav"> Welcome </a>
			li <a href='/listissue' data-toggle="nav"> Issues List </a>
			li <a href='/newissue' data-toggle="nav"> New Issue </a>
			li <a href='/newproject' data-toggle="nav"> New Project </a>
			li <a href='/listprojects' data-toggle="nav"> Projects List </a>
			li <a href='/register' data-toggle="nav"> Sign up </a>
			li <a href='/listusers' data-toggle="nav"> Users List </a>

		div.btn-group.project-switcher
			<button type="button" class="btn btn-default dropdown-toggle switch-project" data-toggle="dropdown"> Switch project <span class="caret"></span></button>
			ul.dropdown-menu.projects-list

		div.btn-group.login-panel
			button.btn.btn-primary.dropdown-toggle(type='button', data-toggle='dropdown')
				if everyauth.user
					span Signed in as #{everyauth.user.login}
				else
					span Sign in
				span.caret
			ul.dropdown-menu.login-dropdown
				if everyauth.user
					li
						a(href='/logout') Sign out
				else
					li
						a(href='/login') Sign in
					li
						a(href='/register') Sign up
