extends layout

block content
    #wrapper
        #display
            include navi

            div.container.well
            
                h3 New user

                if errors
                    div.alert.alert-danger
                        p There were some errors in your registrtation form
                        ul.error-list
                            - each error in errors
                                li #{error}

                form(method='post')

                 div.input-group                      
                    input(type='text', name='login', size='50', class='form-control', placeholder='login')
                 div.input-group                      
                    input(type='password', name='password', size='50', class='form-control', placeholder='password')
                 div.input-group                      
                    input(type='text', name='email', size='50', class='form-control', placeholder='email')
                 div.input-group                     
                    input(type='text', name='firstName', size='50', class='form-control', placeholder='firstName')
                 div.input-group                     
                    input(type='text', name='lastName', size='50', class='form-control', placeholder='lastName')

                 div
                    input(type='submit', value='Sign up', class='btn btn-primary')

        include footer